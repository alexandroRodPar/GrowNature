<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient_drawable"
    tools:context=".ui.inicio.InicioFragment">

    <TextView
        android:id="@+id/tv_nombreIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/wendy_one"
        android:text="@string/tv_nombreIni"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_infoIni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_infoIni"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/almendra"
        android:text="Esta aplicación te ayudará a decorar culquier parte de la casa, o de campo abierto, que tu desees, cada tipo de planta, arbusto o árbol que se encuentra en esta aplicación llevan descripcion, y varias de sus características, para que tu puedas plantarla, y poder tener una zona bonita y llena de naturaleza, por que en esta aplicación lo que también queremos es que la naturaleza crezca y que este planeta este lleno de color."
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombreIni" />

</androidx.constraintlayout.widget.ConstraintLayout>